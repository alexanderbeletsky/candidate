@model IList<Candidate.Areas.Dashboard.Models.JobModel>
@{
    ViewBag.Title = "List";
}

@if (Model == null || Model.Count == 0)
{
    <span>No active jobs</span>
}
else
{
    <table id="team-members-table">
    <thead>
        <th>
            Job Name
        </th>
        <th>
            Last Build
        </th>
        <th>
            Status
        </th>
        <th>
            Configure
        </th>
        <th class="narrow">
            Run
        </th>
        <th class="narrow">
            Delete
        </th>
    </thead>
    <tbody>

        @foreach (var job in Model)
        {
            <tr>
                <td>
                    @job.Name
                </td>
                <td>
                    @job.LastRunTime
                </td>
                <td>
                    @job.Status
                </td>
                <td class="center">
                    <a href="@Url.Action("Configure", new { area = "Dashboard", controller = "Configuration", jobName = @job.Name })">Configure</a>
                </td>
                <td class="center">
                    <a href="@Url.Action("Run", new { jobName = @job.Name })">Run</a>
                </td>
                <td class="center">
                    <a href="@Url.Action("Delete", new { jobName = @job.Name })">X</a> 
                </td>
            </tr>
        }
    </tbody>
</table>
}
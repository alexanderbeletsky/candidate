@model Candidate.Core.Model.Batch
@{
    Layout = "~/Areas/Dashboard/Views/Shared/_Unobtrusive.cshtml";
}
<div class="dialog">
@using (Html.BeginForm()) {
    @Html.ValidationSummary();
                                   
    <fieldset>
        <legend>Batch build configuration</legend>
        <div id="build-script">
            @Html.LabelFor(m => m.BuildScript)
            @Html.TextBoxFor(m => m.BuildScript)
        </div>
        <div id="build-folder">
            @Html.LabelFor(m => m.BuildFolder)
            @Html.TextBoxFor(m => m.BuildFolder)
        </div>
    </fieldset>

    <div class="right">
        <button type="submit" class="minimal">Save config</button>
        <button id="close" type="button" class="minimal">Close</button>    
    </div>
}
</div>
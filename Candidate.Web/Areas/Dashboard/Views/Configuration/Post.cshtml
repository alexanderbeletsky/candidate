@model Candidate.Core.Settings.Model.Post
<div class="dialog">
@using (Html.BeginForm()) {
    @Html.ValidationSummary();
                                   
    <fieldset>
        <legend>Post build configuration</legend>
        <div id="batch-name">
            @Html.LabelFor(m => m.PostBatch)
            @Html.TextBoxFor(m => m.PostBatch)
        </div>
    </fieldset>

    <div class="right">
        <button type="submit" class="minimal">Save config</button>
        <button id="close" type="button" class="minimal">Close</button>    
    </div>
}
</div>
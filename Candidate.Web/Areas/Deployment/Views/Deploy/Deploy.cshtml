@model Candidate.Core.Model.Configurations.Configuration
@{
    ViewBag.Title = "Deployment | Deploy";
    Layout = "~/Areas/Dashboard/Views/Shared/_Page.cshtml";    
}

<form id="deploy" action="@Model.Type">
    @Html.ValidationSummary()
    @Html.HiddenFor(m => m.Id)
    <p>
        Are you sure to deploy <strong>@Model.ReadableName</strong> now?
    </p>
    <button type="submit" class="minimal">Deploy</button>
</form>

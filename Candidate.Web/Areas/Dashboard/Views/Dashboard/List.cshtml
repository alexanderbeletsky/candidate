@model IList<Candidate.Core.Settings.Model.SiteConfiguration>
@{
    ViewBag.Title = "List";
}

@if (Model == null || Model.Count == 0)
{
    <span>No active jobs</span>
}
else
{
    foreach (var job in Model)
    {
        <div class="job clearfix">
            <span class="job-name">@Html.ActionLink(@job.JobName, "Show", new { area = "Dashboard", controller = "Overview", jobName = @job.JobName })</span>
            <span class="job-status"></span>
         
            <div id="buttons" class="right cleanfix">
                <button type="button" class="minimal">@Html.ActionLink("Configure", "Index", new { area = "Dashboard", controller = "Configuration", jobName = @job.JobName })</button>
                <button type="submit" class="minimal">@Html.ActionLink("Deploy", "Setup", new { area = "Dashboard", controller = "Setup", jobName = @job.JobName })</button>
                <button type="submit" class="minimal" >@Html.ActionLink("Delete", "Delete", new { area = "Dashboard", controller = "Configuration", jobName = @job.JobName })</button>
            </div>          
        </div>
         
    }
}
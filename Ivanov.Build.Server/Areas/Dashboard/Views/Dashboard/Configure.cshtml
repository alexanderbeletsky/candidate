@model Ivanov.Build.Server.Areas.Dashboard.Models.Batch

@{
    ViewBag.Title = "Configure";
    Layout = "~/Areas/Dashboard/Views/Shared/_Layout.cshtml";    
}

<div id="internal-nagivation">
    <h2>Build > Jobs > Configure</h2>
    <div class="right">@Html.ActionLink("Back to dashboard", "Index")</div>
    <div class="clear"></div>
</div>


<div class="grey-container">
@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    
    //@Html.HiddenFor(m => m.JobName);
                             
    <fieldset>
        <div id="batch-name-input">
            @Html.TextBoxFor(m => m.BatchName)
        </div>
    </fieldset>
        
    <button type="submit" class="minimal">Save config</button>
    <button type="reset" class="minimal">Discard</button>    
} 
</div>